{
  "compilerOptions": {
    "typeRoots": ["./typings", "./vendor/types", "./types", "./node_modules/@types"],
    "module": "ES2020",
    "target": "ES2017",
    "types": ["jest", "node"],

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
  },
  "include": [
    "__tests__/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
   "exclude": ["node_modules"]

}
